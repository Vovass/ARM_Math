<h1 class="center">Сведенья об ученом</h1>

<div class="container">
  <div class="row">
    <% if user_signed_in? %>

      <% @scientists.each do |scientist| %>

        <div class="col col-sm-8">
          <%= link_to scientist.title, scientist, class: "big_links c_normal" %>
        </div>
        <div class="col col-sm-2">
          <%= link_to 'Edit', edit_scientist_path(scientist), class: "big_links c_edit" %>
        </div>
        <div class="col col-sm-2">
          <%= link_to 'Destroy', scientist, method: :delete, data: { confirm: 'Are you sure?' }, class: "big_links c_destroy" %>
        </div>
      <% end %>

    <% else %>
      <% @scientists.each do |scientist| %>

        <div class="col col-sm-12">
          <%= link_to scientist.title, scientist, class: "big_links c_normal" %>
        </div>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <div class="col-md-3 margin_top_20">
        <%= link_to 'Добавить ученого', new_scientist_path, class: "big_links c_new" %>
      </div>
    <% end %>
  </div>
</div>
