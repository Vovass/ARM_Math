<p id="notice"><%= notice %></p>

<h1>Scientists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scientists.each do |scientist| %>
      <tr>
        <td><%= scientist.title %></td>
        <td><%= scientist.info %></td>
        <td><%= link_to 'Show', scientist %></td>
        <td><%= link_to 'Edit', edit_scientist_path(scientist) %></td>
        <td><%= link_to 'Destroy', scientist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scientist', new_scientist_path %>
