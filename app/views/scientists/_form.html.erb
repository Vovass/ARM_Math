<%= form_with(model: scientist, local: true) do |form| %>
  <%= render 'common/errors', resource: @scientist %>

  <div class="field">
    <h4>Название</h4>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <h4>Заголовок</h4>
    <%= form.text_area :info, id: :scientist_info, class: "form-control"%>
    <trix-editor input="scientist_info"></trix-editor>
  </div>

  <div class="actions">
    <%= form.submit({:class => 'btn btn-success'}) %>
  </div>
<% end %>
