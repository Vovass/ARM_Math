<%= form_with(model: theme, local: true) do |form| %>
  <%= render 'common/errors', resource: @theme %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :disipline, "Discipline" %>
    <%= form.collection_select :discipline_id, Discipline.all, :id, :title, {:selected => params[:id_d]} %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
