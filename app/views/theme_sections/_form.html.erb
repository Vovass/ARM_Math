<%= form_with(model: theme_section, local: true) do |form| %>
  <%= render 'common/errors', resource: @theme_section %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :info %>
    <%= form.text_area :info, id: :theme_section_info, class: "form-control"%>
    <trix-editor input="theme_section_info"></trix-editor>
  </div>

  <div class="field">
    <%= form.label :theme, "Theme" %>
    <%= form.collection_select :theme_id, Theme.where(discipline_id: Theme.find(params[:id_d]).discipline_id), :id, :title, {:selected => params[:id_d]} %>
  </div>

  <div class="field">
    <p>formuls:</p>
    <%= form.collection_select :formul_ids, Formul.all, :id, :title, {},  {multiple: true, class: "form-control"} %>
  </div>

  <div class="field">
    <p>theorms:</p>
    <%= form.collection_select :theorem_ids, Theorem.all, :id, :title, {},  {multiple: true, class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
